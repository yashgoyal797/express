<%- include('../../partition/header.ejs') %>

<section class="dashboard-wrap mtb-40">
    <div class="container">
        <div class="body-content">
            <div class="row">
                <div class="col-md-3">
                    <div class="dash-left">
                        <ul>
                            <li class="active"><a href="/admin/dashboard">Dashboard</a></li>
                            <li><a href="/admin/blog">Blogs</a></li>
                            <li><a href="/admin/category">Categories</a></li>
                            <li><a href="/admin/about">About</a></li>
                            <li><a href="/admin/contact">Contact</a></li>
                            <li><a href="/logout">Logout</a></li>
                        </ul>
                    </div>   
                </div>
                <div class="col-md-9">
                    <div class="dash-right">
                        <div class="dash-header">
                          <div class="dash-title">
                              <h1>Update Blog</h1>
                          </div>
                        </div>
                        <div class="blog-form">
                          <form action="/admin/update/<%= data._id %>" method="post">
                            <div class="form-group form-row">
                                <label class="col-md-3">Category <span class="required">*</span></label>
                                <div class="col-md-9">
                                  <select class="form-control" name="category_name" id="">
                                    
                                    <option value="">Select Category</option>
                                    
                                      <option value="<%= data.category_name %>"><%= data.category_name %></option>
                                    
                                    </select>
                                </div>
                            </div>
                            <div class="form-group form-row">
                              <label class="col-md-3">Title <span class="required">*</span></label>
                              <div class="col-md-9">
                                <input type="text" class="form-control" name="title" value="<%= data.title %>" placeholder="Title" required>
                              </div>
                          </div>
                        
              
                          
                            <div class="form-group form-row">
                                <label class="col-md-3">Description <span class="required">*</span></label>
                                <div class="col-md-9">
                                  <textarea name="description" rows="5" class="form-control" value="<%= data.description %>" placeholder="Description" required></textarea>
                                </div>
                            </div>
                            <div class="form-group form-row">
                                <label class="col-md-3"></label>
                                <div class="col-md-9">
                                <button  type="submit" class="btn btn-primary save-btn">Update</button>
                                </div>
                            </div>
                          </form>
                        </div>
                    </div>   
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('../../partition/footer.ejs') %>
