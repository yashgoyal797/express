<%- include('../../partition/header.ejs') %>
<section class="login-wrap mtb-40">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="login-box">
                    <h1>Blog Display</h1>
                    <table class="table">
                        <thead>
                          <tr> 
                               <th scope="col">ID</th>
                               <th scope="col">Title</th>
                               <th scope="col">Category</th>
                               <th scope="col">Description</th>
                          </tr>
                        </thead>
                        <tbody>

                       <% var i = 1 %>
                          <tr>
                
                          <th scope="row"><%= i++ %></th>
                            <td><%= data.title   %></td>
                            <td><%= data.category_name  %></td>
                            <td><%= data.description   %></td>

                          </tr>
                   
                        </tbody>
                    </table>
                </div>         
            </div>
        </div>
    </div>
</section>
<%- include('../../partition/footer.ejs') %>