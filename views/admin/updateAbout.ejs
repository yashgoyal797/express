<%- include('../partition/header.ejs') %>

<section class="dashboard-wrap mtb-40">
    <div class="container">
        <div class="body-content">
            <div class="row">
                <div class="col-md-3">
                    <div class="dash-left">
                        <ul>
                            <li class="active"><a href="/admin/dashboard">Dashboard</a></li>
                            <li><a href="/admin/blog">Blogs</a></li>
                            <li><a href="/admin/category">Categories</a></li>
                            <li><a href="/admin/about" class="active">About</a></li>
                            <li><a href="/admin/contact">Contact</a></li>
                            <li><a href="/logout">Logout</a></li>
                        </ul>
                    </div>   
                </div>
                <div class="col-md-9">
                    <div class="dash-right">
                        <h1>Update About</h1>
            
                        <div class="about-form">
                            <form action="/admin/updateAbout/<%= data._id %>" method="post">
                              
                              <div class="form-group form-row">
                                  <label class="col-md-3">About <span class="required">*</span></label>
                                  <div class="col-md-9">
                                    <textarea name="about" rows="5" class="form-control" value="<%= data.about %>" placeholder="About" required></textarea>
                                  </div>
                              </div>
                              <div class="form-group form-row">
                                  <label class="col-md-3"></label>
                                  <div class="col-md-9">
                                  <button  type="submit" class="btn btn-primary save-btn">Update</button>
                                  </div>
                              </div>
                            </form>
                          </div>
                    </div>   
                </div>
            </div>
        </div>
    </div>
</section>
<%- include('../partition/footer.ejs') %>